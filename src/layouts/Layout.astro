---
import { ClientRouter } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mis Ebooks | Entretenimiento sin límites</title>
    <meta name="description" content="Disfruta de todos mis libros!" />
    
    <!-- Favicon -->
	<link rel="icon" type="image/png" href="/favicon.png" />

    <!-- Open Graph -->
    <meta property="og:title" content="Mis Ebooks" />
    <meta property="og:description" content="Disfruta de todos mis libros!" />
    <meta property="og:image" content="/social.png" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://k5book.info/" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Mis Ebooks" />
    <meta name="twitter:description" content="Disfruta de todos mis libros!" />
    <meta name="twitter:image" content="https://k5book.info/social.png" />

    <!-- Si usas rutas del cliente o routers, déjalo -->
